{
  "version": 2,
  "builds": [
    { 
      "src": "app.ts",
      "use": "@vercel/node",
      "config": { "buildCommand": "npm run build" }
    },
    { 
      "src": "templates/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/templates/static/$1" },
    { "src": "/login", "dest": "/app.ts" },
    { "src": "/callback", "dest": "/app.ts" },
    { "src": "/", "dest": "/app.ts" },
    { "src": "/artists", "dest": "/app.ts" },
    { "src": "/logout", "dest": "/app.ts" },
    { "src": "/(.*)", "dest": "/app.ts" }
  ]
}